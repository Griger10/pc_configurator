<Application x:Class="PCConfigurator.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PCConfigurator.UI.ViewModels"
             xmlns:views="clr-namespace:PCConfigurator.UI.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MainStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Маппинг ViewModel → View через DataTemplate -->
            <DataTemplate DataType="{x:Type vm:ProcessorsViewModel}">
                <views:ProcessorsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:MotherboardsViewModel}">
                <views:MotherboardsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:RamViewModel}">
                <views:RamView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:GpusViewModel}">
                <views:GpusView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:StorageViewModel}">
                <views:StorageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ConfigurationsViewModel}">
                <views:ConfigurationsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ConfiguratorViewModel}">
                <views:ConfiguratorView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
