<Window x:Class="PCConfigurator.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конфигуратор ПК"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5FA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Сайдбар -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- Логотип / заголовок -->
                <Border DockPanel.Dock="Top" Padding="20,24,20,16">
                    <StackPanel>
                        <TextBlock Text="&#x1F5A5;" FontSize="28" />
                        <TextBlock Text="Конфигуратор ПК"
                                   Foreground="{StaticResource AccentBrush}"
                                   FontSize="15" FontWeight="Bold"
                                   Margin="0,6,0,0" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Separator DockPanel.Dock="Top" Background="#313244" Margin="0" />

                <!-- Навигация: каталог компонентов -->
                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">
                    <TextBlock Text="КОМПОНЕНТЫ"
                               Foreground="#6C7086"
                               FontSize="10" FontWeight="Bold"
                               Margin="20,8,0,4" />

                    <Button Content="  Процессоры"
                            Command="{Binding NavigateProcessorsCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                    <Button Content="  Материнские платы"
                            Command="{Binding NavigateMotherboardsCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                    <Button Content="  Оперативная память"
                            Command="{Binding NavigateRamCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                    <Button Content="  Видеокарты"
                            Command="{Binding NavigateGpusCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                    <Button Content="  Накопители"
                            Command="{Binding NavigateStorageCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                </StackPanel>

                <Separator DockPanel.Dock="Top" Background="#313244" Margin="0,8" />

                <!-- Навигация: сборки -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="СБОРКИ"
                               Foreground="#6C7086"
                               FontSize="10" FontWeight="Bold"
                               Margin="20,0,0,4" />

                    <Button Content="  Мои конфигурации"
                            Command="{Binding NavigateConfigurationsCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                    <Button Content="  Новая сборка"
                            Command="{Binding NavigateConfiguratorCommand}"
                            Style="{StaticResource NavButtonStyle}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основная область контента -->
        <!-- DataTemplate в App.xaml автоматически сопоставит ViewModel с нужным View -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"
                        Margin="0" />
    </Grid>
</Window>
