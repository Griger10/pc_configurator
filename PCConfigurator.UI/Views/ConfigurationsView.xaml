<UserControl x:Class="PCConfigurator.UI.Views.ConfigurationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20,14"
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Мои конфигурации" Style="{StaticResource PageTitleStyle}" />
                <Button Content="Обновить"
                        Command="{Binding LoadCommand}"
                        Style="{StaticResource RefreshButtonStyle}"
                        Margin="16,0,0,0" />
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="1"
                   Text="Загрузка данных..."
                   Style="{StaticResource LoadingStyle}"
                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" />

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Configurations}"
                  Margin="16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"                Binding="{Binding ConfigurationId}" Width="45" />
                <DataGridTextColumn Header="Название"          Binding="{Binding Name}"            Width="140" />
                <DataGridTextColumn Header="Процессор"         Binding="{Binding Processor}"       Width="*" />
                <DataGridTextColumn Header="Материнская плата" Binding="{Binding Motherboard}"     Width="*" />
                <DataGridTextColumn Header="Видеокарта"        Binding="{Binding Gpu}"             Width="*" />
                <DataGridTextColumn Header="Оперативная память" Binding="{Binding Ram}"            Width="*" />
                <DataGridTextColumn Header="Накопитель"        Binding="{Binding Storage}"         Width="*" />
                <DataGridTextColumn Header="Дата"              Binding="{Binding CreatedDate}"     Width="90" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
